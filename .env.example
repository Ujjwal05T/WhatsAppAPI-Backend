# PostgreSQL Configuration
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://username:password@localhost:5432/whatsapp"

# Application Configuration
PORT=5000
NODE_ENV=production

# Frontend URL for CORS (comma-separated for multiple origins)
# For local development:
# FRONTEND_URL=http://localhost:3000,http://127.0.0.1:3000
# For production (update with your actual frontend URLs):
# FRONTEND_URL=https://your-frontend.com,https://www.your-frontend.com,https://app.your-domain.com
FRONTEND_URL=http://localhost:3000,http://127.0.0.1:3000

# API Key for authenticating requests (required)
API_KEY=your_secure_api_key_here

# WhatsApp session directory (optional, defaults to 'sessions')
SESSION_DIR=./sessions

# Rate limiting configuration (optional)
RATE_LIMIT_WINDOW_MS=60000
MAX_MESSAGES_PER_WINDOW=30

# Enable debug logging (optional)
DEBUG=false

# Email Configuration (for notifications)
# Gmail SMTP - Use App Password, not regular password
# To generate App Password: https://myaccount.google.com/apppasswords
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password-here

# Frontend/Dashboard URL (for email reconnection links)
FRONTEND_DASHBOARD_URL=http://localhost:3000

