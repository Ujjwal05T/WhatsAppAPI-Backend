generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id              Int                @id @default(autoincrement())
  name            String             @db.VarChar(100)
  email           String?            @db.VarChar(255)
  mobile          String             @unique @db.VarChar(20)
  passwordHash    String             @map("password_hash") @db.VarChar(255)
  apiKey          String             @unique @map("api_key") @db.VarChar(100)
  role            UserRole           @default(USER)
  createdAt       DateTime           @default(now()) @map("created_at")
  lastLogin       DateTime?          @map("last_login")
  isActive        Boolean            @default(true) @map("is_active")
  whatsappAccounts WhatsAppAccount[]

  @@map("users")
}

model WhatsAppAccount {
  id            Int       @id @default(autoincrement())
  userId        Int       @map("user_id")
  accountToken  String    @unique @map("account_token") @db.VarChar(100)
  phoneNumber   String?   @map("phone_number") @db.VarChar(20)
  whatsappName  String?   @map("whatsapp_name") @db.VarChar(255)
  isConnected   Boolean   @default(false) @map("is_connected")
  createdAt     DateTime  @default(now()) @map("created_at")
  user          User      @relation(fields: [userId], references: [id])
  webhooks      Webhook[]

  @@map("whatsapp_accounts")
}

model Session {
  id            String   @id @default(uuid())
  accountToken  String   @unique @map("account_token") @db.VarChar(100)
  authState     Json     @map("auth_state")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  @@map("sessions")
}

model Webhook {
  id               Int              @id @default(autoincrement())
  accountToken     String           @map("account_token") @db.VarChar(100)
  url              String           @db.VarChar(500)
  isActive         Boolean          @default(true) @map("is_active")
  secret           String?          @db.VarChar(100)
  events           String[]         @default(["message.received"])
  createdAt        DateTime         @default(now()) @map("created_at")
  updatedAt        DateTime         @updatedAt @map("updated_at")
  whatsappAccount  WhatsAppAccount  @relation(fields: [accountToken], references: [accountToken], onDelete: Cascade)

  @@map("webhooks")
}
